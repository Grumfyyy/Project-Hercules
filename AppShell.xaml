<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectHercules.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectHercules"
    xmlns:pages="clr-namespace:ProjectHercules.Pages">

    <TabBar>
        <ShellContent
            Title="Overview"
            Icon="dashboard.svg"
            ContentTemplate="{DataTemplate pages:OverviewPage}"
            Route="OverviewPage" />
        <ShellContent
            Title="Food Intake"
            Icon="bowl.svg"
            ContentTemplate="{DataTemplate pages:FoodIntakePage}"
            Route="FoodIntakePage" />

        <ShellContent
            Title="Fitness"
            Icon="barbell.svg"
            ContentTemplate="{DataTemplate pages:FitnessPage}"
            Route="FitnessPage" />

        <ShellContent
            Title="Settings"
            Icon="settings.svg"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>
    
    

</Shell>
