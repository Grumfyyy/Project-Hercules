<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectHercules.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectHercules"
    xmlns:pages="clr-namespace:ProjectHercules.Pages">

    <TabBar>
        <ShellContent
            Title="Overview"
            Icon="dashboard.png"
            ContentTemplate="{DataTemplate pages:OverviewPage}" />
        <ShellContent
            Title="Food Intake"
            Icon="bowl.png"
            ContentTemplate="{DataTemplate pages:FoodIntakePage}" />

        <ShellContent
            Title="Fitness"
            Icon="barbell.png"
            ContentTemplate="{DataTemplate pages:FitnessPage}" />

        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </TabBar>
    
    

</Shell>
